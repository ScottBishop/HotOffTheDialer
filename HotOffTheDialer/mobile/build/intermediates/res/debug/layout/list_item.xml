<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@drawable/list_view_selector"
    android:layout_height="wrap_content">

    <com.scottbishop.hotoffthedialer.commons.CircularImageView
        android:id="@+id/image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        app:border_color="#EEEEEE"
        app:border_width="2dp"
        app:shadow="true"
        tools:src="@drawable/common_signin_btn_icon_dark" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/material_deep_teal_500"
        android:textSize="18sp"
        tools:text="Scott Bishop" />
</LinearLayout><!-- From: file:/Users/scott.bishop/Documents/HotOffTheNumberPad/HotOffTheNumberPad/mobile/src/main/res/layout/list_item.xml -->